<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:padding="3dp">

    <TextView
        android:id="@+id/delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:text="r"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:visibility="gone" />

    <!--<android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        card_view:cardBackgroundColor="@android:color/transparent">-->

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="?attr/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="Time"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Switch
                android:id="@+id/ad_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_sub"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:background="@color/gray"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main"
            android:layout_below="@+id/view"
            android:orientation="vertical">


            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="08:00 PM"
                android:textColor="?attr/colorPrimary"
                android:textSize="38sp" />
            <!--android:text="Timer Time : 08:00 PM"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_sub"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sun_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/oc_appliance_count_bg"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="S"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/mon_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/oc_appliance_count_bg"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="M"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tues_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/oc_appliance_count_bg"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="T"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/wednes_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/oc_appliance_count_bg"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="W"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/thurs_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/oc_appliance_count_bg"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="T"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/fri_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/oc_appliance_count_bg"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="F"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp"/>


                    <TextView
                        android:id="@+id/satur_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/oc_appliance_count_bg"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="S"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/next_exec_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="Next Execution : "
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/action_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.2"
                    android:gravity="end"
                    android:paddingLeft="23dp"
                    android:text="Turn ON"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="All Rooms in Office"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/action_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|center"
                    android:text="ON"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/main"
            android:layout_marginTop="1dp"
            android:background="@color/gray"/>

    </RelativeLayout>

    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>
