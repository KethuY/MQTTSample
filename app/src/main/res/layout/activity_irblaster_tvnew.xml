<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".irblasters.IRBlasterTVNewActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7.6">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="TELEVISION"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/white"
            android:paddingTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/power_tv_tv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:text="r"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_ir"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="TV"
                    android:textColor="@color/gray_ir" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/relay_tv_tv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:text="f"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_ir"
                    android:textSize="35sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Power"
                    android:textColor="@color/gray_ir"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stb_tv_tv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:text="r"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_ir"
                    android:textSize="35sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="STB"
                    android:textColor="@color/gray_ir" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mute_tv_tv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:text="p"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_ir"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="Mute"
                    android:textColor="@color/gray_ir" />

            </LinearLayout>

        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/white"
            android:paddingTop="3dp" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/back_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/rectangle_et_style_ovel_white"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:padding="5dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/menu_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/rectangle_et_style_ovel_white"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:padding="5dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Menu"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/white" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/vol_plus_tv_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/ch_plus_tv_btn"
                android:layout_alignBottom="@+id/ch_plus_tv_btn"
                android:layout_alignEnd="@+id/fast_forward_dvd_btn"
                android:layout_alignRight="@+id/fast_forward_dvd_btn"
                android:background="@drawable/oc_appliance_count_bg_white"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:text="W"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/fast_forward_dvd_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:paddingLeft="10dp"
                android:text="Vol"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/vol_minus_tv_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/oc_appliance_count_bg_white"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:text="X"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ir_tv_menu"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/left_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="60dp"
                android:layout_toLeftOf="@+id/ok_tv_tv"
                android:layout_toStartOf="@+id/ok_tv_tv"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:text="L"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/ok_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="onTvClick"
                android:paddingLeft="3dp"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/right_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/ch_tv"
                android:layout_alignBottom="@+id/ch_tv"
                android:layout_alignEnd="@+id/imageView"
                android:layout_alignRight="@+id/imageView"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:onClick="onTvClick"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/up_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:paddingTop="13dp"
                android:text="g"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/down_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignLeft="@+id/up_tv_tv"
                android:layout_alignStart="@+id/up_tv_tv"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:paddingBottom="8dp"
                android:text="h"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/ch_plus_tv_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/oc_appliance_count_bg_white"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:text="W"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/ch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:gravity="end|center_vertical"
                android:onClick="onTvClick"
                android:paddingRight="10dp"
                android:text="Ch"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/ch_minus_tv_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="120dp"
                android:background="@drawable/oc_appliance_count_bg_white"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onTvClick"
                android:text="X"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </RelativeLayout>

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="0.1dp"
             android:background="@android:color/white" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:id="@+id/one_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/two_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/three_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:id="@+id/four_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:id="@+id/five_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/six_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/seven_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:id="@+id/eight_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:id="@+id/x_tv_btn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="X"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/nine_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/zero_tv_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:id="@+id/y_tv_btn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_et_style_ovel_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onTvClick"
                    android:padding="7dp"
                    android:text="Y"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvLearn"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:background="@drawable/ir_learn_btn_rectangle"
                android:gravity="center"
                android:onClick="onTvClick"
                android:text="Learn"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvImportSync"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:background="@drawable/ir_learn_btn_rectangle"
                android:gravity="center"
                android:onClick="onTvClick"
                android:text="Import"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
