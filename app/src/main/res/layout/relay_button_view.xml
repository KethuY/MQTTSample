<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_relay_btn_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context="com.atg.onecontrolv3.activities.RelayButtonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lstOp_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/date_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="20:15"
                android:textColor="@color/white" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@color/colorGray" />

            <TextView
                android:id="@+id/quick_timer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:text="m"
                android:textColor="@color/yellow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_relay_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Q"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="50sp" />


            <TextView
                android:id="@+id/app_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:paddingLeft="50dp"
                android:text="LIGHT"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:visibility="visible" />


            <RelativeLayout
                android:id="@+id/dimm_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/dimm_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Q"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

                <SeekBar
                    android:id="@+id/dimm_seek_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toEndOf="@+id/dimm_minus"
                    android:layout_toLeftOf="@+id/dimm_plus"
                    android:layout_toRightOf="@+id/dimm_minus"
                    android:layout_toStartOf="@+id/dimm_plus"
                    android:paddingTop="5dp" />

                <TextView
                    android:id="@+id/dimm_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="Q"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_rb"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#757575">
        <!-- android:background="?attr/colorAccent"-->
    </View>

</LinearLayout>

