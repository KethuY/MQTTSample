<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_irblaster_music_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atg.onecontrol.IRBlasterMusicPlayerActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvLearn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cyan2"
        android:gravity="center"
        android:text="Learn"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvLearn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutOnOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="7dp"
            android:layout_weight="0.07"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnMute"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ir_btn_circle"
                    android:text="s"
                    android:textAllCaps="false"
                    android:textColor="@color/cyan2"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Mute"
                    android:textColor="@color/cyan2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnMP"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ir_btn_circle"
                    android:text="r"
                    android:textAllCaps="false"
                    android:textColor="@color/cyan2"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Music Player"
                    android:textColor="@color/cyan2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSTB"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ir_btn_circle"
                    android:text="r"
                    android:textAllCaps="false"
                    android:textColor="@color/cyan2"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="STB"
                    android:textColor="@color/cyan2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMPAppliance"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/progress_appliance"
                    android:gravity="center"
                    android:text="p"
                    android:textColor="@color/gray"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Power"
                    android:textColor="@color/cyan2" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.2">

                <TextView
                    android:id="@+id/btnChannelDown"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ir_btn_rectangle"
                    android:gravity="center"
                    android:text="C-"
                    android:textColor="@color/cyan2" />

                <TextView
                    android:id="@+id/tvMenu"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/btnChannelUp"
                    android:layout_toStartOf="@+id/btnChannelUp"
                    android:background="@drawable/ir_btn_circle"
                    android:gravity="center"
                    android:text="j"
                    android:textSize="18sp"
                    android:textColor="@color/cyan2" />

                <TextView
                    android:id="@+id/btnChannelUp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ir_btn_rectangle"
                    android:gravity="center"
                    android:text="C+"
                    android:textColor="@color/cyan2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1.5">

                <TextView
                    android:id="@+id/tvArrowUp"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/ir_btn_rectangle"
                    android:gravity="center"
                    android:text="g"
                    android:textColor="@color/cyan2"
                    android:textSize="20sp"
                    android:layout_weight="0.45" />

                <TextView
                    android:id="@+id/btnEnter"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ir_btn_circle"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@color/cyan2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvArrowDown"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/ir_btn_rectangle"
                    android:gravity="center"
                    android:text="h"
                    android:layout_marginBottom="7dp"
                    android:textColor="@color/cyan2"
                    android:textSize="20sp"
                    android:layout_weight="0.33"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1.2">

                <TextView
                    android:id="@+id/btnVolumeUp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ir_btn_rectangle"
                    android:gravity="center"
                    android:text="V+"
                    android:textColor="@color/cyan2" />

                <TextView
                    android:id="@+id/btnVolumeDown"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ir_btn_rectangle"
                    android:gravity="center"
                    android:text="V-"
                    android:textColor="@color/cyan2" />

                <TextView
                    android:id="@+id/tvMenu2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toEndOf="@+id/btnVolumeUp"
                    android:layout_toRightOf="@+id/btnVolumeUp"
                    android:background="@drawable/ir_btn_circle"
                    android:gravity="center"
                    android:text="k"
                    android:textSize="18sp"
                    android:textColor="@color/cyan2" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="37226.41"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.93"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="1"
                    android:textColor="@color/cyan2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="2"
                    android:textColor="@color/cyan2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="3"
                    android:textColor="@color/cyan2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.93"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="4"
                    android:textColor="@color/cyan2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="5"
                    android:textColor="@color/cyan2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="6"
                    android:textColor="@color/cyan2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.93"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="7"
                    android:textColor="@color/cyan2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="8"
                    android:textColor="@color/cyan2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="9"
                    android:textColor="@color/cyan2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.93"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPrev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="PREV"
                    android:textColor="@color/cyan2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="0"
                    android:textColor="@color/cyan2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ir_btn_rectangle"
                    android:text="NEXT"
                    android:textColor="@color/cyan2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
