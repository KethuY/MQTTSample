<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:gravity="end"
        android:id="@+id/lst_op_ir_ll"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="20:15"
            android:id="@+id/date_time_ir_tv"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/quick_timer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:text="m"
            android:textColor="@color/yellow" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_relay_tv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="h"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="50sp" />


        <!--  <TextView
              android:id="@+id/tv_relay"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_gravity="start"
              android:layout_marginLeft="10dp"
              android:layout_weight="1"
              android:background="@drawable/progress_appliance"
              android:gravity="center_horizontal|center_vertical"
              android:text="h"
              android:textColor="?attr/colorPrimaryDark"
              android:textSize="50sp" />-->
        <TextView
            android:id="@+id/tv_ch_up"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="s"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <!--   <TextView
               android:id="@+id/tv_ch_up"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_gravity="start"
               android:layout_marginLeft="10dp"
               android:layout_weight="1"
               android:gravity="center_horizontal|center_vertical"
               android:text="W"
               android:textColor="?attr/colorAccent"
               android:textSize="35sp" />-->

        <TextView
            android:id="@+id/tv_vol_up"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="M"
            android:textColor="@android:color/white"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tv_mute"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="P"
            android:textColor="@android:color/white"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_power"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start|center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <!--<TextView
            android:id="@+id/tv_power"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="50sp"
            android:background="@drawable/progress_appliance"
            android:gravity="center_horizontal|center_vertical"
            android:text="r"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="?attr/colorPrimaryDark" />-->

        <TextView
            android:id="@+id/tv_ch_down"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="t"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_vol_down"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Q"
            android:textColor="@android:color/white"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tv_redirect"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="T"
            android:textColor="@android:color/white"
            android:textSize="35dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_ir"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#757575">
        <!-- android:background="?attr/colorAccent"-->
    </View>

</LinearLayout>
