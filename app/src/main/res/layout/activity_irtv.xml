<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atg.onecontrol.activities.IRTVActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_relay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/progress_appliance"
            android:gravity="center_horizontal|center_vertical"
            android:text="h"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/tv_ch_up"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="W"
            android:textColor="?attr/colorAccent"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_vol_up"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="4"
            android:textColor="?attr/colorAccent"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tv_mute"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="8"
            android:textColor="?attr/colorAccent"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_power"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="50sp"
            android:background="@drawable/progress_appliance"
            android:gravity="center_horizontal|center_vertical"
            android:text="r"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="?attr/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_ch_down"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="X"
            android:textColor="?attr/colorAccent"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tv_vol_down"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="3"
            android:textColor="?attr/colorAccent"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tv_redirect"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textColor="?attr/colorAccent"
            android:textSize="35dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#757575">
        <!-- android:background="?attr/colorAccent"-->
    </View>

</LinearLayout>
