<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_relay_btn_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.atg.onecontrolv3.activities.RelayButtonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_relay_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:background="@drawable/progress_appliance"
            android:gravity="center_horizontal|center_vertical"
            android:text="Q"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:text="20:15"
                android:textColor="@color/white"
               />

            <RelativeLayout
                android:id="@+id/dimm_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/dimm_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Q"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

                <SeekBar
                    android:id="@+id/dimm_seek_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/dimm_minus"
                    android:layout_toLeftOf="@+id/dimm_plus"
                    android:layout_toRightOf="@+id/dimm_minus"
                    android:layout_toStartOf="@+id/dimm_plus"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp" />

                <TextView
                    android:id="@+id/dimm_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="Q"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#757575">
        <!-- android:background="?attr/colorAccent"-->
    </View>


</LinearLayout>