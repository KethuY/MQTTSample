<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="10"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <item>

        <rotate
            android:duration="10"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360">

            <shape
                android:innerRadiusRatio="1"
                android:shape="ring"
                android:thicknessRatio="45"
                android:useLevel="false">
                <size
                    android:width="48dip"
                    android:height="48dip" />

                <gradient
                    android:centerColor="@color/white"
                    android:centerY="0.50"
                    android:endColor="@color/white"
                    android:startColor="@color/white"
                    android:type="sweep"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>

    <item>

        <rotate
            android:duration="10"
            android:fromDegrees="0"
            android:pivotX="40%"
            android:pivotY="40%"
            android:toDegrees="360">
            <shape
                android:innerRadiusRatio="2.6"
                android:shape="ring"
                android:thicknessRatio="75"
                android:useLevel="false">
                <size
                    android:width="48dip"
                    android:height="48dip" />

                <gradient
                    android:centerColor="@color/white"
                    android:centerY="0.50"
                    android:endColor="@color/white"
                    android:startColor="@color/white"
                    android:type="sweep"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>
</layer-list>