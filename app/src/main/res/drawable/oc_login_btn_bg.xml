<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:dither="true">
            <gradient android:angle="270" android:startColor="@color/light_cyan" android:endColor="@color/cyan2"/>
            <corners android:radius="25dp"/>
            <stroke android:width="1dp" android:color="#19576f"/>
        </shape>
    </item>
    <item>
        <shape android:dither="true">
            <gradient android:angle="270" android:startColor="#FFDAE5F9" android:endColor="#b2c1de"/>
            <corners android:radius="25dp"/>
            <stroke android:width="1dp" android:color="#19576f"/>
        </shape>
    </item>
</selector>